{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "dist"]
}
